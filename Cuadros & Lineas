float leon=1;

void setup(){
  size (500,500);
}

void draw (){
  leon=leon+1;
  //mono is used to paint the lines
  for (int mono=100;mono<400;mono=mono+10){
    //mono1 is used for the y of the rectangles
    for (int mono1=100;mono1<390;mono1=mono1+10){
      //mono2 is used for x of the rectangles
      for(int mono2=100;mono2<390;mono2=mono2+10){
      line(mono,leon,mono,500);
      line(leon,mono,500,mono);
      rect(mono2,mono1,10,10);
    }
  }
}
}
